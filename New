    string inp;
    string name;

    cout << (string(100, "\n"));

    cout << "Game Over";

    if (p1 == "H") {

        cout << "What's your name?"; cin >> name;

        fstream my_file;

        my_file.open("Maze_" + mazeNum + ".txt");

        myfile << string(name) + " â€“ " + auto duration;
